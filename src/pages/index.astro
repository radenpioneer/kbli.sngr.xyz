---
import Layout from '../layouts/layout.astro'
import SearchBar from '../component/bar.astro'
---

<Layout>
  <main id='main' class='container'>
    <section id='search'>
      <SearchBar />
    </section>
    <section id='result'></section>
  </main>
</Layout>

<style lang='scss'>
  #main {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;

    > section {
      width: 100%;
    }
  }
</style>
