---
import ErrorLayout from '../layouts/error.astro'

type Props = {
  error: unknown
}

const { error } = Astro.props
const title = '500 Internal Server Error'

export const prerender = false
---

<ErrorLayout
  title='Aduh....'
  message={error instanceof Error
    ? `${title} \u2014 Ada yang rusak: ${error.message} \u2014 Kami gercep benerin nih, maafkan kami ya...`
    : `${title} \u2014 Maaf kak, ada yang rusak, kami cek ruang mesin dulu ya...`}
/>
